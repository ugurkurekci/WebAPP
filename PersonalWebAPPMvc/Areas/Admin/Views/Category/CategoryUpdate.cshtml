@model PersonalWebAPPMvc.DTO_s.Categories.CategoryUpdateModel

@{
    ViewData["Title"] = "CategoryUpdate";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>CategoryUpdate</h1>

<h4>CategoryUpdateModel</h4>
<hr />


@using (Html.BeginForm("CategoryUpdate", "Category", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-4">
            <form>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    @Html.Label("Kategori ID")
                    @Html.TextBoxFor(c => c.Id, new { @class = "form-control", @type = "number", @readonly = "readonly" })
                    @Html.Label("Kategori Adı")
                    @Html.TextBoxFor(c => c.CategoryName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(c=>c.CategoryName,"Harf uzunluğu max 20")
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <br />
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a href="@Url.Action("Index","Category")" class="btn btn-Info btn-icon-split"> <span class="icon text-black-50"> <i class="fas fa-eye"></i> </span><span class="text">Liste</span></a>

                </div>
            </form>
        </div>
    </div>
}